<div class="container d-flex flex-column justify-content-center align-items-center">
  <h1>Account login</h1>
  <form method="POST" action="/" class="d-flex flex-column align-items-center mt-3">
    <input class="form-control m-2" name="email" type="email" placeholder="Email">
    <input class="form-control m-2" name="password" type="password" placeholder="Password">
    <button type="submit" class="btn btn-primary mt-4">Sign in</button>
  </form>
  {{#if message}}
  <div class="alert alert-warning mt-3" role="alert">
    <span>WUsername/Password 錯誤，請重新輸入</span>
  </div>
  {{/if}}
</div>